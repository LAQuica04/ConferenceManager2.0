@model IEnumerable<Event>

@{
    ViewData["Title"] = "Списък на събитията";
}

<h2 class="mt-3">Технологични събития</h2>

<a href="@Url.Action("Create", "Event")" class="btn btn-primary mb-3">Добави събитие</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Описание</th>
            <th>Дата</th>
            <th>Място</th>
            <th>Лектор</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Date.ToString("dd.MM.yyyy")</td>
                <td>@eventItem.Location</td>
                <td>@eventItem.Speaker?.FullName</td>
                <td>
                    <a href="@Url.Action("Edit", "Event", new { id = eventItem.Id })" class="btn btn-warning">Редакция</a>
                    <a href="@Url.Action("Delete", "Event", new { id = eventItem.Id })" class="btn btn-danger">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
